<ol class='items-list'>
  <nav class="gears-sheet-tabs tabs" data-group="primary">
    
  </nav>

  <div>
    <div class="hands gears-tab">
      <li class="item flexrow items-header">
    
        <div class="item-name">{{captalizeFirstLetter (localize @root.config.uiGearHeader.name)}}</div>
        <div class="accuracy-formula">{{captalizeFirstLetter (localize @root.config.uiHeader.job)}}</div>
        <div class="item-controls">
          <a class="item-control item-create" title="Create item" data-type="weapon"><i class="fas fa-plus"></i></a>
        </div>
      </li>
      {{#each abilities as |ability id|}}
        <li class='item flexrow' data-item-id='{{ability._id}}'>
          <div class='item-name'>
            <div class='item-image'>
              <a class='rollable' data-roll-type='ability'>
                <img
                  src='{{ability.img}}'
                  title='{{ability.name}}'
                  width='24'
                  height='24'
                />
              </a>
            </div>
            <h4>{{ability.name}}</h4>
          </div>
          <div class="gear-prop">
            {{ability.system.job}}
          </div>
          <div class='item-controls'>
            <a
              class='item-control item-edit'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-control item-delete'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        </li>
      {{/each}}
    </div>
  </div>
</ol>