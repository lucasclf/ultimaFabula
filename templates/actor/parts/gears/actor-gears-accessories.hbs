<div class="weapon-container">

  {{!-- Armaduras --}}
        <li class="item flexrow items-header">
    
      <div class="item-name">{{captalizeFirstLetter (localize @root.config.uiGearHeader.name)}}</div>
      <div class="equiped">{{captalizeFirstLetter (localize @root.config.uiGearHeader.equipped)}}</div>
      <div class="item-controls">
      </div>
    </li>
    {{#each accessories as |accessory id|}}
      <li class='item flexrow' data-item-id='{{accessory._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{accessory.img}}'
                title='{{accessory.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4>{{accessory.name}}</h4>
        </div>
        <div class="gear-prop">
          <a data-slot-type="accessory" data-item-id="{{accessory._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped accessory._id @root.actor.system.gears.accessory.gearId}}">&#x23C4</a>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  </div>