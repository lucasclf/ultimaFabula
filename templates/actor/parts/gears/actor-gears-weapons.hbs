<div class="weapon-container">

  {{!-- Armas --}}
    <li class="item flexrow items-header">
    
      <div class="item-name">{{captalizeFirstLetter (localize @root.config.uiGearHeader.name)}}</div>
      <div class="accuracy-formula">{{captalizeFirstLetter (localize @root.config.uiGearHeader.accuracy)}}</div>
      <div class="damage-formula">{{captalizeFirstLetter (localize @root.config.uiGearHeader.damage)}}</div>
      <div class="damage-type">{{captalizeFirstLetter (localize @root.config.uiGearHeader.element)}}</div>
      <div class="equiped">{{captalizeFirstLetter (localize @root.config.uiGearHeader.type)}}</div>
      <div class="equiped">{{captalizeFirstLetter (localize @root.config.uiGearHeader.equipped)}}</div>
      <div class="item-controls">
      </div>
    </li>
    {{#each weapons as |weapon id|}}
      <li class='item flexrow' data-item-id='{{weapon._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='weapon'>
              <img
                src='{{weapon.img}}'
                title='{{weapon.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4>{{weapon.name}}</h4>
        </div>
        <div class="gear-prop">
          {{recoverAccuracyWeapon weapon.system.attack}}
        </div>
        <div class="gear-prop">
          {{weapon.system.damage.damageBonus}}
        </div>
        <div class="gear-prop">
          {{weapon.system.damage.type}}
        </div>
        <div class="gear-prop">
          {{weapon.system.qualifications.weaponType}}
        </div>
        <div class="gear-prop">
          {{#if (eq system.qualifications.weaponGrip @root.config.enums.weaponGrip.TWO_HAND)}}
            <a data-slot-type="mainHand" data-item-id="{{weapon._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped weapon._id @root.actor.system.gears.mainHand.gearId}}">&#x2B24 </a>
          {{else}}
            <a data-slot-type="mainHand" data-item-id="{{weapon._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped weapon._id @root.actor.system.gears.mainHand.gearId}}">&#9686</a>
            <a data-slot-type="offHand" data-item-id="{{weapon._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped weapon._id @root.actor.system.gears.offHand.gearId}}">&#9687</a>
          {{/if}}
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}


  {{!-- Escudos --}}
    <li class="item flexrow items-header">
    
      <div class="item-name">{{captalizeFirstLetter (localize @root.config.uiGearHeader.name)}}</div>
      <div class="defense">{{captalizeFirstLetter (localize @root.config.uiGearHeader.defense)}}</div>
      <div class="magic-defense">{{captalizeFirstLetter (localize @root.config.uiGearHeader.magicDefense)}}</div>
      <div class="iniciativa">{{captalizeFirstLetter (localize @root.config.uiGearHeader.initiative)}}</div>
      <div class="equiped">{{captalizeFirstLetter (localize @root.config.uiGearHeader.equipped)}}</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Create item" data-type="weapon"><i class="fas fa-plus"></i></a>
      </div>
    </li>
    {{#each shields as |shield id|}}
      <li class='item flexrow' data-item-id='{{shield._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{shield.img}}'
                title='{{shield.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4>{{shield.name}}</h4>
        </div>
        <div class="gear-prop">
          {{recoverDefense shield.system 'defense'}}
        </div>
        <div class="gear-prop">
          {{recoverDefense shield.system 'magicDefense'}}
        </div>
        <div class="gear-prop">
          {{recoverDefense shield.system 'defense'}}
        </div>
        <div class="gear-prop">
          <a data-slot-type="offHand" data-item-id="{{shield._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped shield._id @root.actor.system.gears.offHand.gearId}}">&#9687</a>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  </div>