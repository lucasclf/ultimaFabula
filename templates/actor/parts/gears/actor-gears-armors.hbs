<div class="weapon-container">

  {{!-- Armaduras --}}
        <li class="item flexrow items-header">
    
      <div class="item-name">{{captalizeFirstLetter (localize @root.config.uiGearHeader.name)}}</div>
      <div class="defense">{{captalizeFirstLetter (localize @root.config.uiGearHeader.defense)}}</div>
      <div class="magic-defense">{{captalizeFirstLetter (localize @root.config.uiGearHeader.magicDefense)}}</div>
      <div class="iniciativa">{{captalizeFirstLetter (localize @root.config.uiGearHeader.initiative)}}</div>
      <div class="equiped">{{captalizeFirstLetter (localize @root.config.uiGearHeader.equipped)}}</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Create item" data-type="weapon"><i class="fas fa-plus"></i></a>
      </div>
    </li>
    {{#each armors as |armor id|}}
      <li class='item flexrow' data-item-id='{{armor._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{armor.img}}'
                title='{{armor.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4>{{armor.name}}</h4>
        </div>
        <div class="gear-prop">
          {{recoverDefense armor.system 'defense'}}
        </div>
        <div class="gear-prop">
          {{recoverDefense armor.system 'magicDefense'}}
        </div>
        <div class="gear-prop">
          {{recoverDefense armor.system 'defense'}}
        </div>
        <div class="gear-prop">
          <a data-slot-type="armor" data-item-id="{{armor._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped armor._id @root.actor.system.gears.armor.gearId}}">&#9881;</a>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  </div>