<ol class='items-list'>
  <div class="gear-header"><a class="hidden-gear-button">{{captalizeText (localize @root.config.uiGearHeader.weapons)}}</a></div>
  {{> "systems/fabula-ultima/templates/actor/parts/actor-spells.hbs"}}
  <div class="weapon-container">
    <li class="item flexrow items-header">
    
      <div class="item-name">{{captalizeFirstLetter (localize @root.config.uiGearHeader.name)}}</div>
      <div class="accuracy-formula">{{captalizeFirstLetter (localize @root.config.uiGearHeader.accuracy)}}</div>
      <div class="damage-formula">{{captalizeFirstLetter (localize @root.config.uiGearHeader.damage)}}</div>
      <div class="damage-type">{{captalizeFirstLetter (localize @root.config.uiGearHeader.element)}}</div>
      <div class="equiped">{{captalizeFirstLetter (localize @root.config.uiGearHeader.type)}}</div>
      <div class="equiped">{{captalizeFirstLetter (localize @root.config.uiGearHeader.equipped)}}</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Create item" data-type="weapon"><i class="fas fa-plus"></i></a>
      </div>
    </li>
    {{#each weapons as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class="gear-prop">
          {{recoverAccuracyWeapon item.system.attack}}
        </div>
        <div class="gear-prop">
          {{item.system.damage.damageBonus}}
        </div>
        <div class="gear-prop">
          {{item.system.damage.type}}
        </div>
        <div class="gear-prop">
          {{item.system.qualifications.weaponType}}
        </div>
        <div class="gear-prop">
          {{#if (eq system.qualifications.weaponGrip @root.config.enums.weaponGrip.TWO_HAND)}}
            <a data-slot-type="mainHand" data-item-id="{{item._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped item._id @root.actor.system.gears.mainHand.gearId}}">&#x2B24 </a>
          {{else}}
            <a data-slot-type="mainHand" data-item-id="{{item._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped item._id @root.actor.system.gears.mainHand.gearId}}">&#9686</a>
            <a data-slot-type="offHand" data-item-id="{{item._id}}" class="gear-equip equip-symbol gear-equiped-{{isEquiped item._id @root.actor.system.gears.offHand.gearId}}">&#9687</a>
          {{/if}}
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  </div>
  
</ol>