<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.health.value" class="resource-label">{{localize @root.config.resourcesAbbreviations.healthPoints}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.mana.value" class="resource-label">{{localize @root.config.resourcesAbbreviations.manaPoints}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.mana.value" value="{{system.mana.value}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.mana.max" value="{{system.mana.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.inventory.value" class="resource-label">{{localize @root.config.resourcesAbbreviations.inventoryPoints}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.inventory.value" value="{{system.inventory.value}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.inventory.max" value="{{system.inventory.max}}" data-dtype="Number"/>
          </div>
        </div>

      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="attributes">{{localize @root.config.tabName.attributes}}</a>
    <a class="item" data-tab="gears">{{localize @root.config.tabName.gears}}</a>
    <a class="item" data-tab="classes">{{localize @root.config.tabName.classes}}</a>
    <a class="item" data-tab="abilities">{{localize @root.config.tabName.abilities}}</a>
    <a class="item" data-tab="spells">{{localize @root.config.tabName.spells}}</a>
    <a class="item" data-tab="actions">{{localize @root.config.tabName.actions}}</a>
    <a class="item" data-tab="description">{{localize @root.config.tabName.description}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      <section class="grid grid-3col">
        <aside class="sidebar">

          {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
          use both the "grid" and "grid-Ncol" class where "N" can be any number
          from 1 to 12 and will create that number of columns.  --}}
          <div class="abilities flexcol">
            {{#each system.abilities as |ability key|}}
            <div class="ability flexrow flex-group-center">
              <label for="system.abilities.{{key}}.value" class="resource-label rollable flexlarge align-left" data-roll="d20+@abilities.{{key}}.mod" data-label="{{localize (lookup @root.config.abilities key)}}">{{localize (lookup @root.config.abilities key)}}</label>
              <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}"/>
            </div>
            {{/each}}

            {{#each system.attributes.defenses as |defense key|}}
            <div class="defense flexrow flex-group-center">
              <label for="system.attributes.defenses.{{key}}.value" class="resource-label flexlarge align-left" data-label="{{localize (lookup @root.config.attributes key)}}">{{localize (lookup @root.config.attributes key)}}</label>
              <p>{{defense.value}}</p>
            </div>
            {{/each}}



            <div class="initiative flexrow flex-group-center">
              <label for="system.attributes.initiative.value" class="resource-label rollable flexlarge align-left" data-roll="d20+@abilities.initiative.mod" data-label="{{localize @root.config.attributes.initiative}}">{{localize @root.config.attributes.initiative}}</label>
              <input type="text" name="system.attributes.initiative.value" value="{{system.attributes.initiative.value}}"/>
            </div>
          </div>
        </aside>

        {{!-- For the main attributes list, span the right two columns --}}
        <section class="main grid-span-2">
          {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
          {{> "systems/fabula-ultima/templates/actor/parts/actor-attributes.hbs"}}
        </section>

      </section>
    </div>

    {{!-- Owned Gears Tab --}}
    <div class="tab gears" data-group="primary" data-tab="gears">
       {{> "systems/fabula-ultima/templates/actor/parts/actor-gears.hbs"}}
    </div>

    {{!-- Active Classes Tab --}}
    <div class="tab classes flexcol" data-group="primary" data-tab="classes">
      {{> "systems/fabula-ultima/templates/actor/parts/actor-classes.hbs"}}
    </div>

        {{!-- Owned Abilities Tab --}}
    <div class="tab abilities" data-group="primary" data-tab="abilities">
      {{> "systems/fabula-ultima/templates/actor/parts/actor-abilities.hbs"}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/fabula-ultima/templates/actor/parts/actor-spells.hbs"}}
    </div>
    
    {{!-- Owned Actions Tab --}}
    <div class="tab actions" data-group="primary" data-tab="actions">
      {{> "systems/fabula-ultima/templates/actor/parts/actor-actions.hbs"}}
    </div>

     {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

  </section>
</form>
